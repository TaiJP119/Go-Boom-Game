<?xml version="1.0" encoding="utf-8"?>
<!-- Main game screen layout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:padding="16dp">

    <!-- Trick, Deck, Player names and, scores -->

    <!-- Card display -->
    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="3dp"
        android:text="Welcome To Go Boom Gameï¼"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
           android:layout_width="395dp"
           android:layout_height="165dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="8dp"
           android:orientation="horizontal"/>



    <LinearLayout
        android:id="@+id/playerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">
        <!-- Trick display -->
        <TextView
            android:id="@+id/Trick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:text="Trick: "
            android:textSize="20sp" />
        <!-- Deck display -->
        <TextView
            android:id="@+id/Deck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:text="Deck: "
            android:textSize="20sp" />


        <!-- Player's turn display -->
        <TextView
            android:id="@+id/PlayersTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="Now is turn of Player: "
            android:textSize="20sp" />
        <!-- Player 1's score-->
        <TextView
            android:id="@+id/player1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Player 1: Score"
            android:textSize="20sp" />

        <!-- Player 2's score -->
        <TextView
            android:id="@+id/player2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Player 2: Score"
            android:textSize="20sp" />

        <!-- Player 3's score -->
        <TextView
            android:id="@+id/player3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Player 3: Score"
            android:textSize="20sp" />

        <!-- Player 4's score -->
        <TextView
            android:id="@+id/player4TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Player 4: Score"
            android:textSize="20sp" />
    </LinearLayout>

